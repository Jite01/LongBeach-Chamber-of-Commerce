<Layout title="Long Beach Chamber â€” Showcase">
  <style>
    :root {
      --bg: #0f1724;
      --card: #0b1220;
      --muted: #94a3b8;
      --accent: #38bdf8;
      --radius: 14px;
      --max: 1100px;
      font-family: Inter, ui-sans-serif, system-ui, sans-serif;
    }
    * { box-sizing: border-box; }
    body { margin: 0; background: linear-gradient(180deg, var(--bg) 0%, var(--card) 100%); }
    a { color: var(--accent); }
    header { padding: 18px 22px; display: flex; align-items: center; }
    .brand { display: flex; align-items: center; gap: 12px; }
    .logo { width: 44px; height: 44px; border-radius: var(--radius); }
    nav a { margin-left: 14px; color: var(--muted); text-decoration: none; }
    nav a:hover { color: white; }
    .container { max-width: var(--max); margin: 28px auto; }
  </style>
  
